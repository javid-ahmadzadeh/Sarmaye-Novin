<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/Device_News"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:background="@drawable/white4"
            android:text="USER_FULLNAME"
            android:textColor="@android:color/black"
            android:textSize="@dimen/Primery_size_font" />

        <TextView
            android:id="@+id/item_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/white4"
            android:text="USER_PASSWORD"
            android:textColor="@android:color/black"
            android:textSize="@dimen/Primery_size_font" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/item_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/white4"
            android:text="USER EMAIL"
            android:textColor="@android:color/black"
            android:textSize="@dimen/Primery_size_font" />


    </LinearLayout>


</android.support.v7.widget.CardView>