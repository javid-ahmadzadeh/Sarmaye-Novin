<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle2"
    tools:context="com.gilan_stock.tkp.splite.SignUp">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_gravity="center_horizontal"
        android:textColorHint="#D3000000"
        android:background="@drawable/white2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextFullName"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:hint="Enter Your Full Name"
        android:gravity="center"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/expertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_gravity="center_horizontal"
        android:textColorHint="#D3000000"
        android:background="@drawable/white2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextPassword"
        android:layout_below="@+id/EditTextEmail"
        android:layout_marginTop="10dp"
        android:hint="Enter Your Expertise"
        android:gravity="center"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_gravity="center_horizontal"
        android:textColorHint="#D3000000"
        android:background="@drawable/white2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextEmail"
        android:layout_below="@+id/EditTextFullName"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:hint="Enter Your Email"
        android:gravity="center"/>



    <Button
        android:layout_gravity="center_horizontal"
        android:background="@drawable/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextPassword"
        android:id="@+id/ButtonRegister"
        android:layout_marginTop="50dp"/>

</LinearLayout>
